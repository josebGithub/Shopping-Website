<div>
  <form method="post" action="add">
    <table> 
      <tbody>
       <caption>Add a new product</caption>
       <tr>
         <th>SKU: </th>
         <td><input type="text" name="sku" required 
              placeholder="Enter product sku"></td>
       </tr>
       <tr>
         <th>Name: </th>
         <td><input type="text" name="name" required 
              placeholder="Enter product name"></td>
       </tr>
        <tr>
         <th>Description: </th>
         <td><input type="text" name="description" required 
              placeholder="Enter product description"></td>
        </tr>
        <tr>
         <th>Price: </th>
         <td><input type="text" name="price" required 
              placeholder="Enter product price"></td>
        </tr>
         <tr>
         <th>Quantity: </th>
         <td><input type="text" name="quantity" required 
              placeholder="Enter product quantity"></td>
        </tr>
         <tr>
         <th>Type: </th>
         <td><input type="text" name="type" required 
              placeholder="Enter product Type"></td>
        </tr>
         <tr>
         <th>Image: </th>
         <td><input type="text" name="image" required 
              placeholder="Enter product image"></td>
        </tr>
       
       </tbody>
      <tfooter>
        <tr>
          <td></td>
          <td>
           <input type="submit" value="Save">
           <input type="button" value="Cancel"  onclick="cancelAction()">
          </td>
        </tr>
      </tfooter>
    </table>
  </form>
</div>