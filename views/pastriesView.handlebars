<section class="product-details">
        {{#each data}}
        <div class="card">
            <img src="/images/{{this.image}}" alt="{{this.image}}" style="width:30%">
            <h1>{{this.name}}</h1>
            <p class="price">${{this.price}}</p>
            <p>{{this.description}}</p>
            <label for="{{this.name}}_quantity">Quantity:</label>
            <select name="{{this.name}}_quantity" id="{{this.name}}_quantity">
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
            </select>
            <p><button onclick="addToCart('{{this.sku}}','{{this.name}}','{{this.description}}', '{{this.price}}', value)">Add to Cart</button></p>
        </div> 
        {{/each}}
</section>    
