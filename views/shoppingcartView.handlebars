<div>
 <form method="POST" action="{{action}}">
    <div class="CartContainer">
        <div class="Header">
            <h3 class="Heading">Shopping Cart</h3>
            <h5 class="Action">Remove all</h5>
        </div>
        {{#each data.items}}
            <div class="Cart-Items">
                <div class="image-box">
                    <img src="/images/{{this.product.image}}" style="height:40px" />
                </div>
                <div class="about">
                    <h2 class="title">{{this.product.name}}</h2>
                    <h3 class="subtitle">{{this.product.description}}</h3>
                </div>
                <div class="counter">
                    <label for="quantity">Quantity:</label>
                     <select name="quantity" id="quantity"  onchange="this.options[this.selectedIndex].value && (window.location = this.options[this.selectedIndex].value);">
                        <option value="/home/cart/update/{{this.product._id}}/1" {{{isSelected this.quantity 1}}}>1</option>
                        <option value="/home/cart/update/{{this.product._id}}/2" {{{isSelected this.quantity 2}}}>2</option>
                        <option value="/home/cart/update/{{this.product._id}}/3" {{{isSelected this.quantity 3}}}>3</option>
                        <option value="/home/cart/update/{{this.product._id}}/4" {{{isSelected this.quantity 4}}}>4</option>
                        <option value="/home/cart/update/{{this.product._id}}/5" {{{isSelected this.quantity 5}}}>5</option>
                    </select>  
                </div>
                <div class="about">
                    <div class="title">Price : ${{convertToDecimal this.product.price}}</div>
                </div>
                <div class="prices">
                    <div class="amount">${{convertToDecimal this.total}}</div>
                    <div class="remove"><a href="/home/remove/{{this.product._id}}"><u>Remove</u></a></div>
                </div>
            </div>
        {{/each}}
      <hr> 
      <div class="checkout">
      <div class="total">
          <div class="total">
          <div>
              <div class="Subtotal">Total</div>
          </div>
          <div>
               <div class="total-amount">${{data.total}}</div>
          </div>
      </div>
      </div>
           <button class="button" type="submit" value="{{action}}">{{action}}</button>
    </div>
   </div>
  </form>
 </div>