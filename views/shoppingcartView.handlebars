    <div class="CartContainer">
        <div class="Header">
            <h3 class="Heading">Shopping Cart</h3>
            <h5 class="Action">Remove all</h5>
        </div>
        {{#each data.items}}
            <div class="Cart-Items">
                <div class="image-box">
                    <img src="/images/{{this.image}}" style="height:40px" />
                </div>
                <div class="about">
                    <h2 class="title">{{this.name}}</h2>
                    <h3 class="subtitle">{{this.description}}</h3>
                </div>
                <div class="counter">
                    <div class="btn">+</div>
                    <div class="count">{{this.quantity}}</div>
                    <div class="btn">-</div>
                </div>
                <div class="prices">
                    <div class="amount">{{this.price}}</div>
                    <div class="remove"><u>Remove</u></div>
                </div>
            </div>
        {{/each}}
      <hr> 
      <div class="checkout">
      <div class="total">
          <div>
              <div class="Subtotal">Total</div>
          </div>
          <div>
               <div class="total-amount">${{data.total}}</div>
          </div>
         
      </div>
      <button class="button">Checkout</button>
    </div>
 </div>